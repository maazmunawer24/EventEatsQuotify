@model EventEatsQuotify.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PizzaCraft</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
          integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+Wyb80XY94U6wCJo/U1wnUnY1C5+gz/ixH6"
          crossorigin="anonymous" />

    <!-- Other head elements remain unchanged -->
</head>
<body>
    <div class="container">
        <div class="row shadow rounded">
            <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                <div>
                    <img src="/images/carouselImages/Pizza-650x500.jpg" class="w-100 h-100 mt-3" alt="" />
                </div>
            </div>
            <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                <form autocomplete="off" method="post" class="m-3 p-3" action="/Account/Register">
                    <div class="mb-3">
                        <h2 class="text-pink fst-italic">Register</h2>
                        <span class="fst-italic text-muted">Create your account</span>
                    </div>
                    <div class="mb-3">
                        @Html.ValidationSummary()
                    </div>
                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
                        <label for="Name">Name</label>
                    </div>
                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Address" })
                        <label for="Address">Address</label>
                    </div>
                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                        <label for="Email">Email</label>
                    </div>
                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Password", type = "Password" })
                        <label for="Password">Password</label>
                    </div>

                    <!-- New dropdown for selecting user role -->
                    <div class="form-floating mb-3">
                        <label asp-for="SelectedRole" class="control-label"></label>
                        <div class="input-group">
                    @*         <select asp-for="SelectedRole" class="form-control" asp-items="new SelectList(Model.AvailableRoles)">
                                <option value="">Select Role</option>
                            </select> *@
                            <select asp-for="SelectedRole" class="form-control" asp-items="@(new SelectList(Model.AvailableRoles.Select(r => new SelectListItem { Text = r, Value = r }), "Value", "Text"))">
                                <option value="">Select Role</option>
                            </select>

                        </div>
                        @* <span asp-validation-for="SelectedRole" class="text-danger"></span> *@
                    </div>



                    <div class="mb-3">
                        <button type="submit" class="btn btn-sm w-100 btn-dark p-2 shadow rounded">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS files -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-bu3T0hF5BIofbb9Z+8YG9d6Yt2IuG4V5LJqKM0iW5V9tiLKaW48EIEEx8szk2T9o" crossorigin="anonymous"></script>

</body>
</html>
