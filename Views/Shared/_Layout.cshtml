<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventEats Quotify</title>

    <!-- External Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/c58416c086.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- External Styles -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EventEatsQuotify.styles.css" asp-append-version="true" />
</head>

<body>
    <header class="position-sticky top-0">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-danger fw-bold fs-4" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif" asp-area="" asp-controller="Home" asp-action="Index">EventEats Quotify</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="FoodItem" asp-action="Index">Order Now</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="">Feedbacks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="">Contact</a>
                        </li>
                    </ul>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <div>
                            <a class="nav-link fw-bold text-pink-menu" asp-controller="Account" asp-action="Login">LogIn/SignUp</a>
                        </div>
                    }
                    else
                    {
                        @if (User.IsInRole("Vendor"))
                        {
                            <div class="d-flex align-items-center">
                                <a class="nav-link vendor-link text-dark" asp-controller="VendorProfile" asp-action="Index">Hi, @User.Identity.Name!</a>
                                <a class="nav-link fw-bold text-pink-menu" asp-controller="Account" asp-action="LogOut">Log Out</a>
                            </div>
                        }
                        else 
                        {
                            <div class="d-flex align-items-center">
                                <a class="nav-link customer-link text-dark" asp-controller="CustomerProfile" asp-action="Index">Hi, @User.Identity.Name!</a>
                                <a class="nav-link fw-bold text-pink-menu" asp-controller="Account" asp-action="LogOut">SignOut</a>
                            </div>
                        }
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top bg-light py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h4 class="mb-4">EventEats Quotify</h4>
                    <p class="text-muted">Your go-to platform for event catering and quotations.</p>
                </div>
                <div class="col-md-4">
                    <h4 class="mb-4">Contact Us</h4>
                    <ul class="list-unstyled">
                        <li>
                            <i class="fab fa-instagram me-2 text-primary"></i>
                            <a href="#">Instagram</a>
                        </li>
                        <li>
                            <i class="fab fa-whatsapp me-2 text-success"></i>
                            <a href="#">WhatsApp</a>
                        </li>
                        <li>
                            <i class="fab fa-facebook me-2 text-primary"></i>
                            <a href="#">Facebook</a>
                        </li>
                        <li>
                            <i class="far fa-envelope me-2 text-secondary"></i>
                            <a href="#">Mail</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h4 class="mb-4">Address</h4>
                    <address class="text-muted">XYZ, Block A, Karachi, Pakistan</address>
                </div>
            </div>
            <div class="mt-4 text-center">
                <p class="mb-0">© 2024 EventEats Quotify. All rights reserved.</p>
                <p class="mb-0">Powered By <strong class="text-primary">CATERINGEXPERTS</strong></p>
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
    <script>
        @using System.Security.Claims

            document.addEventListener('DOMContentLoaded', function () {
                var userRole = '@User.FindFirstValue("http://schemas.microsoft.com/ws/2008/06/identity/claims/role")';

                if (userRole === 'Vendor') {
                    document.querySelectorAll('.customer-link').forEach(function (el) {
                        el.style.display = 'none';
                    });
                } else if (userRole === 'Customer') {
                    document.querySelectorAll('.vendor-link').forEach(function (el) {
                        el.style.display = 'none';
                    });
                }
            });
    </script>
</body>

</html>
