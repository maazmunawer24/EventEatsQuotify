<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">@Model.Name Profile</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        @if (Model.ProfilePicture != null && Model.ProfilePicture.Length > 0)
        {
            <img src="data:image/png;base64,@Convert.ToBase64String(Model.ProfilePicture)" class="img-fluid rounded" alt="Profile Image">
        }
        else
        {
            <img src="~/images/defaultimages/user.png" class="img-fluid rounded" alt="Profile Image">
        }
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Address:</strong> @Model.ShopAddress</p>
        <!-- Add other vendor profile details as needed -->
        <!-- Button to view Menu Items -->
        <button type="button" class="btn btn-secondary mt-3" onclick="loadMenuItems('@Model.Id')">View Menu Items</button>
    </div>
</div>
