@{
    ViewData["Title"] = "Vendor Dashboard";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg rounded">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title"><i class="fas fa-store"></i> EventEats Quotify - Vendor Dashboard</h3>
                </div>

                <div class="card-body">
                    <p class="lead">Welcome to the Vendor Dashboard. This is the place where vendors can manage their food items and pricing.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-lg-6">
            <div class="card shadow rounded">
                <div class="card-header bg-success text-white">
                    <h4 class="card-title"><i class="fas fa-utensils"></i> Menu Item Management</h4>
                </div>

                <div class="card-body">
                    <p class="card-text">Manage your menu items here.</p>
                    <a href="@Url.Action("MenuItems", "Vendor")" class="btn btn-success btn-block">Manage Menu Items</a>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow rounded">
                <div class="card-header bg-info text-white">
                    <h4 class="card-title"><i class="fas fa-images"></i> Photo Management</h4>
                </div>

                <div class="card-body">
                    <p class="card-text">Manage photos for each menu item.</p>
                    <a href="#" class="btn btn-info btn-block disabled" aria-disabled="true">Photo Management (Coming Soon)</a>
                </div>
            </div>
        </div>
    </div>
</div>
